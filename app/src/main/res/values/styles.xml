<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">  <!-- main parent Theme.AppCompat-->
        <!-- Customize your theme here. -->
        <item name="android:textColor">#FFFF</item>
        <item name="android:textColorSecondary">#CCFFFFFF</item>
        <item name="colorPrimary">@color/colorPrimaryD</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkD</item>
        <item name="colorAccent">@color/colorAccentD</item>

    </style>

    <style name="LightTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#FFFF</item>
        <item name="android:textColorSecondary">#CCFFFFFF</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PreferenceTheme" parent="AppTheme">
        <item name="android:background">#272727</item>
    </style>




    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">#272727</item>
    </style>



</resources>