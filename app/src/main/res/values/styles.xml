<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat">  <!-- main parent Theme.AppCompat-->
    <!-- Customize your theme here. -->
    <item name="android:textColor">#FFFF</item>
    <item name="android:textColorSecondary">#CCFFFFFF</item>
    <item name="colorPrimary">@color/colorPrimaryD</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDarkD</item>
    <item name="colorAccent">@color/colorAccentD</item>
    <item name="colorBackgroundFloating">   <!--set background for dialog-->
        ?attr/colorPrimary</item>
    <item name="android:colorBackgroundFloating" tools:targetApi="23">
        ?attr/colorPrimary</item>

</style>

<style name="LightTheme" parent="Theme.AppCompat">
    <!-- Customize your theme here. -->
    <item name="android:textColor">#FFFF</item>
    <item name="android:textColorSecondary">#CCFFFFFF</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>

    <style name="AppColors">  <!-- main parent Theme.AppCompat-->
        <!-- Customize your theme here. -->
        <item name="android:textColor">#FFFF</item>
        <item name="android:textColorSecondary">#CCFFFFFF</item>
        <item name="colorPrimary">@color/colorPrimaryD</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkD</item>
        <item name="colorAccent">@color/colorAccentD</item>

    </style>


    <style name="LightColors">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#FFFF</item>
        <item name="android:textColorSecondary">#CCFFFFFF</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">?attr/colorAccent</item>
    </style>

</resources>